<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sdk568_image_notification"
    android:layout_width="@dimen/sdk568_size_320dp"
    android:layout_height="@dimen/sdk568_size_240dp"
    android:layout_gravity="center"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/sdk568_local_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/sdk568_size_15dp"
        android:layout_marginEnd="@dimen/sdk568_size_15dp"
        android:layout_marginLeft="@dimen/sdk568_size_15dp"
        android:layout_marginRight="@dimen/sdk568_size_15dp"
        android:layout_marginStart="@dimen/sdk568_size_15dp"
        android:layout_marginTop="@dimen/sdk568_size_15dp"
        android:clickable="true"
        android:contentDescription="@null"
        android:onClick="openAds" />

    <ImageView
        android:layout_width="@dimen/sdk568_size_30dp"
        android:layout_height="@dimen/sdk568_size_30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:onClick="btnCloseAds"
        android:src="@drawable/sdk568_ic_close1" />

</RelativeLayout>