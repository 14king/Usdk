<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sdk568_size_300dp"
    android:layout_height="@dimen/sdk568_size_250dp"
    android:layout_gravity="center"
    android:background="@color/sdk568_color1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sdk568_size_45dp"
        android:layout_marginTop="@dimen/sdk568_size_0.5dp"
        android:background="@color/sdk568_white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/sdk568_size_20dp"
            android:layout_height="@dimen/sdk568_size_20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/sdk568_size_15dp"
            android:layout_marginStart="@dimen/sdk568_size_15dp"
            android:clickable="true"
            android:contentDescription="@null"
            android:onClick="backToMainPayment"
            android:src="@drawable/sdk568_ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/sdk568_size_15dp"
            android:layout_marginStart="@dimen/sdk568_size_15dp"
            android:text="@string/sdk568_payment_google"
            android:textColor="@color/sdk568_black1"
            android:textSize="@dimen/sdk568_size_14sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/sdk568_inapp_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sdk568_size_20dp"
        android:layout_marginEnd="@dimen/sdk568_size_30dp"
        android:layout_marginLeft="@dimen/sdk568_size_30dp"
        android:layout_marginRight="@dimen/sdk568_size_30dp"
        android:layout_marginStart="@dimen/sdk568_size_30dp"
        android:layout_marginTop="@dimen/sdk568_size_15dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/sdk568_size_10dp"
        android:scrollbars="none" />

</LinearLayout>