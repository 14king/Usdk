<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sdk568_size_300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/sdk568_color1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sdk568_size_45dp"
        android:layout_marginTop="@dimen/sdk568_size_0.5dp"
        android:background="@color/sdk568_white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/sdk568_size_20dp"
            android:layout_height="@dimen/sdk568_size_20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/sdk568_size_15dp"
            android:layout_marginStart="@dimen/sdk568_size_15dp"
            android:clickable="true"
            android:contentDescription="@null"
            android:onClick="backToMainPayment"
            android:src="@drawable/sdk568_ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/sdk568_size_15dp"
            android:layout_marginStart="@dimen/sdk568_size_15dp"
            android:text="@string/sdk568_payment_card"
            android:textColor="@color/sdk568_black1"
            android:textSize="@dimen/sdk568_size_14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/sdk568_card_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sdk568_size_40dp"
        android:layout_marginEnd="@dimen/sdk568_size_30dp"
        android:layout_marginLeft="@dimen/sdk568_size_30dp"
        android:layout_marginRight="@dimen/sdk568_size_30dp"
        android:layout_marginStart="@dimen/sdk568_size_30dp"
        android:layout_marginTop="@dimen/sdk568_size_15dp"
        android:background="@drawable/sdk568_bg_payment_item"
        android:clickable="true"
        android:drawableEnd="@drawable/sdk568_ic_polygon"
        android:drawableRight="@drawable/sdk568_ic_polygon"
        android:gravity="center_vertical|left|start"
        android:onClick="showCardList"
        android:paddingEnd="@dimen/sdk568_size_10dp"
        android:paddingLeft="@dimen/sdk568_size_10dp"
        android:paddingRight="@dimen/sdk568_size_10dp"
        android:paddingStart="@dimen/sdk568_size_10dp"
        android:text="@string/sdk568_payment_select_card_list"
        android:textColor="@color/sdk568_color1"
        android:textSize="@dimen/sdk568_size_14sp" />

    <EditText
        android:id="@+id/sdk568_card_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sdk568_size_40dp"
        android:layout_marginEnd="@dimen/sdk568_size_30dp"
        android:layout_marginLeft="@dimen/sdk568_size_30dp"
        android:layout_marginRight="@dimen/sdk568_size_30dp"
        android:layout_marginStart="@dimen/sdk568_size_30dp"
        android:layout_marginTop="@dimen/sdk568_size_15dp"
        android:background="@drawable/sdk568_bg_payment_item"
        android:gravity="center_vertical|left|start"
        android:hint="@string/sdk568_payment_card_code"
        android:imeOptions="flagNoFullscreen|flagNoExtractUi|actionNext"
        android:paddingEnd="@dimen/sdk568_size_10dp"
        android:paddingLeft="@dimen/sdk568_size_10dp"
        android:paddingRight="@dimen/sdk568_size_10dp"
        android:paddingStart="@dimen/sdk568_size_10dp"
        android:singleLine="true"
        android:textColor="@color/sdk568_color1"
        android:textColorHint="@color/sdk568_color1"
        android:textSize="@dimen/sdk568_size_14sp" />

    <EditText
        android:id="@+id/sdk568_card_serial"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sdk568_size_40dp"
        android:layout_marginEnd="@dimen/sdk568_size_30dp"
        android:layout_marginLeft="@dimen/sdk568_size_30dp"
        android:layout_marginRight="@dimen/sdk568_size_30dp"
        android:layout_marginStart="@dimen/sdk568_size_30dp"
        android:layout_marginTop="@dimen/sdk568_size_15dp"
        android:background="@drawable/sdk568_bg_payment_item"
        android:gravity="center_vertical|left|start"
        android:hint="@string/sdk568_payment_card_serial"
        android:imeOptions="flagNoFullscreen|flagNoExtractUi|actionGo"
        android:paddingEnd="@dimen/sdk568_size_10dp"
        android:paddingLeft="@dimen/sdk568_size_10dp"
        android:paddingRight="@dimen/sdk568_size_10dp"
        android:paddingStart="@dimen/sdk568_size_10dp"
        android:singleLine="true"
        android:textColor="@color/sdk568_color1"
        android:textColorHint="@color/sdk568_color1"
        android:textSize="@dimen/sdk568_size_14sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sdk568_size_40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/sdk568_size_20dp"
        android:layout_marginTop="@dimen/sdk568_size_15dp"
        android:background="@drawable/sdk568_bg_btn_payment"
        android:onClick="paymentCard"
        android:paddingEnd="@dimen/sdk568_size_30dp"
        android:paddingLeft="@dimen/sdk568_size_30dp"
        android:paddingRight="@dimen/sdk568_size_30dp"
        android:paddingStart="@dimen/sdk568_size_30dp"
        android:text="@string/sdk568_payment_btn_card"
        android:textColor="@color/sdk568_white"
        android:textSize="@dimen/sdk568_size_14sp" />

</LinearLayout>