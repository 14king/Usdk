<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sdk568_size_300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/sdk568_color1"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sdk568_size_45dp"
        android:background="@color/sdk568_white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ImageView1"
            android:layout_width="@dimen/sdk568_size_69dp"
            android:layout_height="@dimen/sdk568_size_30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/sdk568_size_15dp"
            android:layout_marginStart="@dimen/sdk568_size_15dp"
            android:contentDescription="@null"
            android:src="@drawable/sdk568_logo_568" />

        <ImageView
            android:id="@+id/sdk568_icon_money"
            android:layout_width="@dimen/sdk568_size_20dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sdk568_size_15dp"
            android:src="@drawable/sdk568_ic_money" />

        <TextView
            android:id="@+id/sdk568_txt_money"
            android:layout_width="@dimen/sdk568_size_150dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/sdk568_size_5dp"
            android:layout_toLeftOf="@+id/sdk568_icon_money"
            android:gravity="center|right"
            android:text="0"
            android:textColor="#000000" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sdk568_size_20dp"
        android:layout_marginTop="@dimen/sdk568_size_15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sdk568_btn_payment_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sdk568_size_40dp"
            android:layout_marginEnd="@dimen/sdk568_size_30dp"
            android:layout_marginLeft="@dimen/sdk568_size_30dp"
            android:layout_marginRight="@dimen/sdk568_size_30dp"
            android:layout_marginStart="@dimen/sdk568_size_30dp"
            android:background="@drawable/sdk568_bg_payment_item"
            android:clickable="true"
            android:drawableLeft="@drawable/sdk568_ic_card"
            android:drawableStart="@drawable/sdk568_ic_card"
            android:gravity="center"
            android:onClick="showPaymentCard"
            android:paddingEnd="@dimen/sdk568_size_10dp"
            android:paddingLeft="@dimen/sdk568_size_10dp"
            android:paddingRight="@dimen/sdk568_size_10dp"
            android:paddingStart="@dimen/sdk568_size_10dp"
            android:text="@string/sdk568_payment_card"
            android:textColor="@color/sdk568_color1"
            android:textSize="@dimen/sdk568_size_14sp"
            android:visibility="gone" />

        <View
            android:id="@+id/sdk568_btn_payment_horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sdk568_size_15dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/sdk568_btn_payment_inapp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sdk568_size_40dp"
            android:layout_marginEnd="@dimen/sdk568_size_30dp"
            android:layout_marginLeft="@dimen/sdk568_size_30dp"
            android:layout_marginRight="@dimen/sdk568_size_30dp"
            android:layout_marginStart="@dimen/sdk568_size_30dp"
            android:background="@drawable/sdk568_bg_payment_item"
            android:clickable="true"
            android:drawableLeft="@drawable/sdk568_ic_google_play"
            android:drawableStart="@drawable/sdk568_ic_google_play"
            android:gravity="center"
            android:onClick="showPaymentGoogle"
            android:paddingEnd="@dimen/sdk568_size_10dp"
            android:paddingLeft="@dimen/sdk568_size_10dp"
            android:paddingRight="@dimen/sdk568_size_10dp"
            android:paddingStart="@dimen/sdk568_size_10dp"
            android:text="@string/sdk568_payment_google"
            android:textColor="@color/sdk568_color1"
            android:textSize="@dimen/sdk568_size_14sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>