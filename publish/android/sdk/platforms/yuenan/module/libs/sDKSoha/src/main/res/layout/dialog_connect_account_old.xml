<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnHomeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_round"
        android:clickable="true"
        android:minHeight="30dp" >

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="@string/connectMessage" />

        <TextView
            android:id="@+id/tvWithDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvContent"
            android:layout_marginLeft="-10dp"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/lnNormalAction"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tvWithDivider"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvCenterDivider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvConnect"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/connectAcc"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>