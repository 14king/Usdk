<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layoutMatch"
    android:background="@color/crystal" >

    <RelativeLayout
        android:id="@+id/rlBody"
        style="@style/layoutWrap"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/marginDialog"
        android:background="@drawable/bg_dialog_warning" >

        <ImageView
            android:id="@+id/ivWarning"
            style="@style/layoutWrap"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
             />

        <TextView
            android:id="@+id/tvWarning"
            style="@style/textViewNormal"
            android:layout_below="@+id/ivWarning"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/marginNormal"
            android:gravity="center"
            android:text="@string/textviewCheckInternetTryAgain" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/ibClose"
        style="@style/imageButtonNormal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/rlBody"
        android:layout_marginBottom="-46dp"
        android:layout_marginLeft="-46dp"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@+id/rlBody"
        android:background="@drawable/bg_image_button_arc"
        android:contentDescription="@null"
        android:src="@drawable/ic_close_black" />

</RelativeLayout>